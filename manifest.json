{
    "name": "Password Viewer",
    "version": "1.0",
    "manifest_version": 2,
    "description": "An Extension to temporary view password ",
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_title": "Inject!"
    },
    "icons": {
        "16": "images/lock16bw.png",
        "32": "images/lock32bw.png",
        "48": "images/lock48bw.png",
        "128": "images/lock128bw.png"
    },
    "permissions": [
        "activeTab"
    ]
}